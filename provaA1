        int agua=scanner.nextline();
        scanner.close();

Double aguaideal= (peso*0.035);
Double aguabebida= aguaideal-agua;

System.out.println("nome: ",nome);
System.out.println("peso: ",peso,"kg");
System.out.println("litros de agua ingeridos",agua,"L");
System.out.println("voce deve beber",math.ceil(aguaideal),"L de agua por dia");
